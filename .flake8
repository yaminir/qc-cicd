[flake8]
max-line-length = 120
exclude = 
    cdk.out,
    __pycache__,
    .git,
    tests,
    venv,
    .venv
ignore = 
    E501,  # line too long
    W503,  # line break before binary operator
    E203,  # whitespace before ':'
    F401   # imported but unused (common in __init__.py)
per-file-ignores =
    __init__.py:F401